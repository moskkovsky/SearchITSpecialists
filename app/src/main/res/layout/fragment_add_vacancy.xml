<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAddVacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:padding="20dp"
            android:text="Опубликовать вакансию"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sw_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAddVacancy"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/listener_company"
                style="@style/StyleTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Компания" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_use_listener"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/listener_startup"
                style="@style/StyleTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Стартап" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_title_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCorners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sw_education"
            app:layout_constraintVertical_chainStyle="packed"
            app:startIconDrawable="@drawable/baseline_input_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title_vacancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:hint="Название"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCorners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_title_vacancy"
            app:layout_constraintVertical_chainStyle="packed"
            app:startIconDrawable="@drawable/baseline_description_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description_vacancy"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:fontFamily="@font/alata"
                android:hint="Описание"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_city_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCorners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_description_vacancy"
            app:layout_constraintVertical_chainStyle="packed"
            app:startIconDrawable="@drawable/baseline_location_city_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_city_vacancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:hint="Город"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_spec_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alata"
            android:hint="Выбери нужного специалиста"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_city_vacancy"
            app:shapeAppearanceOverlay="@style/RoundedCorners">

            <AutoCompleteTextView
                android:id="@+id/et_spec_vacancy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:inputType="none"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Директор Google" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_age_experience_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alata"
            android:hint="Выберите опыт работы"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_spec_vacancy"
            app:shapeAppearanceOverlay="@style/RoundedCorners">

            <AutoCompleteTextView
                android:id="@+id/et_age_experience_vacancy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:inputType="none"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="5 лет" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_type_experience_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/alata"
            app:shapeAppearanceOverlay="@style/RoundedCorners"

            android:hint="Выбери тип занятости"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_age_experience_vacancy">

            <AutoCompleteTextView
                android:id="@+id/et_type_experience_vacancy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fontFamily="@font/alata"
                android:inputType="none"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Тип занятости" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_chart_experience_vacancy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/alata"
            app:shapeAppearanceOverlay="@style/RoundedCorners"

            android:hint="Выбери график работы"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_type_experience_vacancy">
            <AutoCompleteTextView
                android:id="@+id/et_chart_experience_vacancy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:inputType="none"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="График работы" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvStack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"

            android:text="Android SDK"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/rounded_checkbox_selector"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/tvStack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"

            android:text="C++"
            app:layout_constraintStart_toEndOf="@id/tvStack1"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/rounded_checkbox_selector"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/tvStack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"

            android:text="Java"
            app:layout_constraintStart_toEndOf="@id/tvStack2"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/rounded_checkbox_selector"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/tvStack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"

            android:text="CI/CD"
            app:layout_constraintStart_toEndOf="@id/tvStack3"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/rounded_checkbox_selector"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/tvStack5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"

            android:text="UI/UX"
            app:layout_constraintStart_toEndOf="@id/tvStack4"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/rounded_checkbox_selector"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/tvStack6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"

            android:text="Git"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack5"
            app:layout_constraintTop_toBottomOf="@id/til_chart_experience_vacancy" />

        <TextView
            android:id="@+id/tvStack7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Django"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStack1" />

        <TextView
            android:id="@+id/tvStack8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Cucumber"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack7"
            app:layout_constraintTop_toBottomOf="@id/tvStack1" />

        <TextView
            android:id="@+id/tvStack9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="HTML, CSS"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack8"
            app:layout_constraintTop_toBottomOf="@id/tvStack1" />

        <TextView
            android:id="@+id/tvStack10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Jenkins"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack9"
            app:layout_constraintTop_toBottomOf="@id/tvStack1" />

        <TextView
            android:id="@+id/tvStack11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Jenkins"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStack7" />

        <TextView
            android:id="@+id/tvStack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Kafka"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack11"
            app:layout_constraintTop_toBottomOf="@id/tvStack7" />

        <TextView
            android:id="@+id/tvStack13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="SQL"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack12"
            app:layout_constraintTop_toBottomOf="@id/tvStack7" />

        <TextView
            android:id="@+id/tvStack14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_checkbox_selector"
            android:gravity="center"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Spring"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStack13"
            app:layout_constraintTop_toBottomOf="@id/tvStack7" />


        <Button
            android:id="@+id/btNextInRegPersonalInfoUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#17F1D7"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Опубликовать"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvStack14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>